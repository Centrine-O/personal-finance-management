# Laravel Environment Configuration Template
# Copy this file to .env and customize the values for your environment
# This file contains all the configuration our application needs

#--------------------------------------------------------------------------
# Application Configuration
#--------------------------------------------------------------------------

# Application name (displayed in emails, page titles, etc.)
APP_NAME="Personal Finance Manager"

# Environment: local, development, staging, production
# This affects debugging, logging, and performance optimizations
APP_ENV=local

# Application key (used for encryption, sessions, etc.)
# Generate with: php artisan key:generate
APP_KEY=

# Enable debug mode? (true/false)
# NEVER set to true in production - it exposes sensitive information
APP_DEBUG=true

# Application URL (used for generating links in emails, etc.)
APP_URL=http://localhost:8000

# Application timezone (affects date/time storage and display)
APP_TIMEZONE=UTC

# Application locale (language)
APP_LOCALE=en

# Fallback locale if translation not found
APP_FALLBACK_LOCALE=en

# Faker locale (for generating test data)
APP_FAKER_LOCALE=en_US

# Maintenance mode secret (allows access during maintenance)
APP_MAINTENANCE_DRIVER=file

#--------------------------------------------------------------------------
# Database Configuration
#--------------------------------------------------------------------------

# Database connection type (mysql, pgsql, sqlite)
DB_CONNECTION=mysql

# Database server hostname (use 'mysql' for Docker container)
DB_HOST=mysql

# Database server port
DB_PORT=3306

# Database name
DB_DATABASE=personal_finance_db

# Database username
DB_USERNAME=finance_user

# Database password
DB_PASSWORD=secure_password_2024

#--------------------------------------------------------------------------
# Session Configuration
#--------------------------------------------------------------------------

# Session driver: file, cookie, database, apc, memcached, redis, array
# Redis is best for performance and scalability
SESSION_DRIVER=redis

# Session lifetime in minutes (how long until auto-logout)
SESSION_LIFETIME=120

# Encrypt session data? (recommended for security)
SESSION_ENCRYPT=false

# Session cookie name
SESSION_COOKIE=personal_finance_session

# Session domain (usually your domain)
SESSION_DOMAIN=null

#--------------------------------------------------------------------------
# Cache Configuration
#--------------------------------------------------------------------------

# Cache driver: apc, array, database, file, memcached, redis
# Redis is excellent for caching financial data
CACHE_DRIVER=redis

# Cache key prefix (prevents conflicts with other apps)
CACHE_PREFIX=finance_cache

#--------------------------------------------------------------------------
# Queue Configuration
#--------------------------------------------------------------------------

# Queue connection: sync, database, beanstalkd, sqs, redis
# Redis is great for handling background jobs (email sending, reports, etc.)
QUEUE_CONNECTION=database

#--------------------------------------------------------------------------
# Redis Configuration
#--------------------------------------------------------------------------

# Redis server hostname (use 'redis' for Docker container)
REDIS_HOST=redis

# Redis server password (leave empty if no password)
REDIS_PASSWORD=null

# Redis server port
REDIS_PORT=6379

# Redis database number (0-15, use different numbers for different purposes)
REDIS_DB=0

# Redis cache database (separate from main Redis DB)
REDIS_CACHE_DB=1

#--------------------------------------------------------------------------
# Mail Configuration
#--------------------------------------------------------------------------

# Mail driver: smtp, ses, mailgun, mandrill, postmark, log, array
# Use 'mailhog' for development, 'smtp' for production
MAIL_MAILER=mailhog

# SMTP server settings (for production)
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# Email addresses
MAIL_FROM_ADDRESS="noreply@personalfinance.local"
MAIL_FROM_NAME="${APP_NAME}"

#--------------------------------------------------------------------------
# File Storage Configuration
#--------------------------------------------------------------------------

# Default filesystem disk: local, public, s3
FILESYSTEM_DISK=local

#--------------------------------------------------------------------------
# AWS Configuration (if using S3 for file storage)
#--------------------------------------------------------------------------

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

#--------------------------------------------------------------------------
# Broadcasting Configuration (for real-time features)
#--------------------------------------------------------------------------

# Broadcast driver: pusher, ably, redis, log, null
BROADCAST_DRIVER=redis

#--------------------------------------------------------------------------
# Logging Configuration
#--------------------------------------------------------------------------

# Log channel: stack, single, daily, slack, syslog, errorlog, monolog, custom
LOG_CHANNEL=stack

# Log deprecations channel
LOG_DEPRECATIONS_CHANNEL=null

# Log level: emergency, alert, critical, error, warning, notice, info, debug
LOG_LEVEL=debug

#--------------------------------------------------------------------------
# Third-Party Service Configuration
#--------------------------------------------------------------------------

# Pusher settings (for real-time notifications)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Google services (for calendar integration, etc.)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Bank API integration (for account syncing)
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENVIRONMENT=development

#--------------------------------------------------------------------------
# Security Configuration
#--------------------------------------------------------------------------

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Password reset token expiration (minutes)
PASSWORD_RESET_EXPIRE=60

# JWT secret (if using JWT for API authentication)
JWT_SECRET=

#--------------------------------------------------------------------------
# Financial Configuration
#--------------------------------------------------------------------------

# Default currency code
DEFAULT_CURRENCY=USD

# Currency display format
CURRENCY_SYMBOL=$

# Decimal places for currency display
CURRENCY_DECIMALS=2

# Budget calculation frequency (daily, weekly, monthly)
BUDGET_CALCULATION_FREQUENCY=daily

# Notification settings
BILL_REMINDER_DAYS=3
LOW_BALANCE_THRESHOLD=100

#--------------------------------------------------------------------------
# Development Tools Configuration
#--------------------------------------------------------------------------

# Laravel Telescope (debugging tool)
TELESCOPE_ENABLED=true

# Laravel Horizon (queue monitoring)
HORIZON_ENABLED=true

# Debug bar (for development)
DEBUGBAR_ENABLED=true

#--------------------------------------------------------------------------
# Testing Configuration
#--------------------------------------------------------------------------

# Test database connection
DB_TEST_CONNECTION=mysql
DB_TEST_HOST=mysql
DB_TEST_PORT=3306
DB_TEST_DATABASE=personal_finance_test
DB_TEST_USERNAME=finance_user
DB_TEST_PASSWORD=secure_password_2024